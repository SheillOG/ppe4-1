{% extends 'base.html.twig' %}

{% block title %}Meow Food | Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}


        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}



    <div class="container max-w-full mx-auto py-24 px-6 border-solid border-4 border-light-blue-500 w-1/4">
        <div class="max-w-sm mx-auto px-6">
            <div class="mx-auto max-w-lg font-semibold ">
                <h1 class="text-center mb-6 text-xl">Veuillez vous connecter</h1>
                <label for="inputEmail">Utilisateur ou Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="mail@meow.food" class="mb-4 px-3 py-2 rounded-lg w-full border-2 border-gray-300 shadow-md focus:placeholder-gray-500 focus:border-gray-400" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" placeholder="**********" class="mb-2 px-3 py-2 rounded-lg w-full border-2 border-gray-300 shadow-md focus:placeholder-gray-500 focus:border-gray-400" required>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <label class="block text-gray-500 my-1"><a
                            href="login/forgot"
                            class="cursor-pointer text-black border-b-2 border-gray-200 hover:border-gray-400">Mot de passe oubli√© ?</a></label>
                <button type="submit"
                        class="mt-3 text-lg font-semibold bg-green-500 w-full text-white rounded-lg px-6 py-2 shadow-xl hover:text-white hover:bg-green-600">
                    Connexion
                </button>

            </div>
        </div>
    </div>
</form>
{% endblock %}
