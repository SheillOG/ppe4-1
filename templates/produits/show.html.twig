{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <div id="produit_id{{ produit.idproduit }}" class="py-6">
        <!-- Breadcrumbs -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center space-x-2 text-gray-400 text-sm">
                <a href="{{ path("accueil") }}" class="hover:underline hover:text-gray-600">{{ _accueil }}</a>
                <span>
              <svg class="h-5 w-5 leading-none text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
                <a href="{{ path("produits") }}" class="hover:underline hover:text-gray-600">{{ _produit }}</a>
                <span>
              <svg class="h-5 w-5 leading-none text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
                <span>Menu</span>
            </div>
        </div>
        <!-- ./ Breadcrumbs -->
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
            <div class="flex flex-col md:flex-row -mx-4">
                <div class="md:flex-1 px-4">
                    <div class="h-64 md:h-80 rounded-lg bg-gray-100 mb-4 flex items-center justify-center">
                        <img src="{{ asset(produit.image) }}" />
                    </div>
                </div>
                <div class="md:flex-1 px-4">
                    <h2 class="mb-2 leading-tight tracking-tight font-bold text-gray-800 text-2xl md:text-3xl">{{ produit.nomproduit }}</h2>
                    <div class="flex items-center space-x-4 my-4">
                        <div>
                            <div class="rounded-lg bg-green-100 flex py-2 px-3">
                                <span class="text-gray-400 mr-1 mt-1">â‚¬</span>
                                <span class="font-bold text-gray-500 text-3xl">{{ produit.prix }}</span>
                            </div>
                        </div>
                        <div class="flex-1">
                            <p class="text-yellow-500 text-xl font-semibold">Economise ?%</p>
                            <p class="text-gray-400 text-sm">Frites & Boisson Offerts</p>
                        </div>
                    </div>

                    <p class="text-gray-500">{{ produit.description }}</p>

                    <p class="text-black font-semibold py-1">Stock: {% if produit.quantite <= 0 %} RUPTURE {% else %} {{ produit.quantite }} {% endif %} Note: {{ produit.evaluations }}</p>
                    <div class="flex py-4 space-x-4">
                        <button type="button" class="h-14 px-6 py-2 font-semibold rounded-xl bg-green-600 hover:bg-indigo-500 text-white">Ajouter au panier</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="{{ path('produits') }}">back to list</a>

    <a href="{{ path('produits_edit', {'idproduit': produit.idproduit}) }}">edit</a>

    {{ include('produits/_delete_form.html.twig') }}
{% endblock %}
